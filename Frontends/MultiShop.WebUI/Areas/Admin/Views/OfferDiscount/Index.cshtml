@model List<ResultOfferDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
   
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori listesi</h4>
                <p>Kategori ile ilgili işlemlerini aşağıdan yapabilirsiniz</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>İndirim teklif adı </th>
                                <th>İndirim teklif alt adı </th>
                                <th>sil </th>
                                <th>güncelle </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.SubTitle</td>
                                    <td><a href="/Admin/OfferDiscount/DeleteOfferDiscount/@item.OfferDiscountId" class="btn btn-danger">sil</a></td>
                                    <td><a href="/Admin/OfferDiscount/UpdateOfferDiscount/@item.OfferDiscountId" class="btn btn-success">güncelle</a></td>

                                </tr>
                            }

                        </tbody>
                    </table>
                    @if (Model.Count <= 2)
                    {
                        <a href="/Admin/OfferDiscount/CreateOfferDiscount/" class="btn btn-primary">yeni indirim teklifi ekle</a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


