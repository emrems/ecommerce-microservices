@model List<ResultSpecialOfferDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    
}


<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Özel teklifler listesi</h4>
                
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                               
                                <th>Teklif Başlığı </th>
                                <th>Teklif Altbaşlığı </th>
                               
                                <th>sil </th>
                                <th>güncelle </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.SubTitle</td>
                                    <td><a href="/Admin/SpecialOffer/DeleteSpecialOffer/@item.SpecialOfferId" class="btn btn-danger">sil</a></td>
                                    <td><a href="/Admin/SpecialOffer/UpdateSpecialOffer/@item.SpecialOfferId" class="btn btn-success">güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Admin/SpecialOffer/CreateSpecialOffer/" class="btn btn-primary">yeni özel teklif ekle</a>
                </div>
            </div>
        </div>
    </div>
</section>



